# Frontend Environment Variables
# Copy this to .env.local for development
# For production, create .env.production with production URLs

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:10000

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Himalayan AI Tech Pro

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Payment Gateway Configuration
NEXT_PUBLIC_KHALTI_PUBLIC_KEY=test-khalti-public-key
NEXT_PUBLIC_ESEWA_MERCHANT_CODE=EPAYTEST

# Feature Flags
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_BLOG=true

# Admin Configuration
NEXT_PUBLIC_ADMIN_PATH=/admin
